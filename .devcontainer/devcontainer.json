{
  "name": "AnyList Development Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "target": "development",
    "context": ".."
  },
  
  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true
        },
        "eslint.workingDirectories": ["./"],
        "javascript.preferences.importModuleSpecifier": "relative",
        "typescript.preferences.importModuleSpecifier": "relative"
      },
      
      // Add the IDs of extensions you want installed when the container is created
      "extensions": [
        "ms-vscode.vscode-node-azure-pack",
        "ms-vscode.js-debug-nightly",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-typescript-next",
        "christian-kohler.path-intellisense",
        "formulahendry.auto-rename-tag",
        "ms-vscode.vscode-js-profile-flame",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.references-view",
        "ms-vsliveshare.vsliveshare"
      ]
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally
  "forwardPorts": [3000],
  
  // Configure port attributes
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "notify"
    }
  },

  // Use 'postCreateCommand' to run commands after the container is created
  "postCreateCommand": "npm install",

  // Use 'postStartCommand' to run commands after the container starts
  "postStartCommand": {
    "server": "echo 'Development container started successfully! ðŸŽ‰'"
  },

  // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root
  "remoteUser": "anylist",
  
  // Set container environment variables
  "containerEnv": {
    "NODE_ENV": "development"
  },

  // Configure mounts
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
    "source=anylist-node-modules,target=/app/node_modules,type=volume"
  ],

  // Configure features to install
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },

  // Enable ptrace-based debugging
  "runArgs": ["--init"],
  
  // Configure shutdown action
  "shutdownAction": "stopContainer"
}